<html ng-app="app.todos">

<head>
    <title>Node/Angular Todos</title>

    <!-- load cdn styles -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.10.0/css/xeditable.min.css" />
    <!-- load cdn js -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" />

    <!-- load app styles -->
    <link rel="stylesheet" href="assets/css/style.css">

    <!-- load cdn scripts    -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.8/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.10.0/js/xeditable.min.js"></script>


    <!-- load app -->
    <script src="assets/js/main/app.js"></script>
    <script src="assets/js/main/services/serviceTodos.js"></script>


</head>

<body ng-controller="todoController">
    <div class="container">
        <div class="jumbotron text-center">
            <h1> {{appName}} <span class="label label-info">{{todos.length}}</span> </h1>
        </div>

        <div id="todo-list" class="row">
            <div class="col-sm-7 col-sm-offset-3">
                <div class="checkbox" ng-repeat="todo in todos">
                    <input type="checkbox" ng-model="todo.isDone">

                    <a href ng-click="deleteTodo(todo)"> <i class="fa fa-remove"></i></a>

                    <a href ng-click="textBtnForm.$show()" ng-hide="textBtnForm.$visible"><i class="fa fa-edit"></i></a>

                    <span ng-class="{strike: todo.isDone }" editable-text="todo.text" e-form="textBtnForm" onaftersave="updateTodo(todo)">
                        {{todo.text}}
                    </span>
                </div>
            </div>
        </div>

        <div id="todo-form" class="row">
            <div class="col-sm-8 col-sm-offset-2 text-center">
                <form>
                    <div class="form-group">
                        <input type="text" ng-model="formData.text" class="form-control input-lg text-center" placeholder="What to do want to do ?">
                    </div>

                    <button type="button" class="btn btn-primary btn-lg" ng-disable="!formData.text" ng-click="createTodo()">Add</button>

                </form>

            </div>

        </div>

    </div>
</body>

</html>